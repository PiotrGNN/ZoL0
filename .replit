entrypoint = "main.py"
run = "python run_server.py"

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "${REPL_HOME}"
FLASK_APP = "main.py"
FLASK_DEBUG = "1"
PORT = "8080"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

[unitTest]
language = "python3"

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["python", "run_server.py"]
deploymentTarget = "cloudrun"

[server]
host = "0.0.0.0"
port = 8080

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "Run Server"

[[workflows.workflow]]
name = "Run Server"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 run_server.py"

[[workflows.workflow]]
name = "Init Project"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 init_project.py"

[[workflows.workflow]]
name = "Test Bybit Connection"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 test_bybit_connection.py"

[[workflows.workflow]]
name = "Diagnoza Importów"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -c \"import sys; print('Python path:', sys.path); "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "import os; print('Working directory:', os.getcwd());"

