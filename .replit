run = "python main.py"
entrypoint = "main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

hidden = [".config", "**/__pycache__", "**/.mypy_cache", "**/*.pyc"]

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "${REPL_HOME}"
FLASK_APP = "main.py"
FLASK_ENV = "development"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

[unitTest]
language = "python3"

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[server]
host = "0.0.0.0"
port = 5000

[port]
5000 = "http"

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true
protocol = "http"

[interpreter]
command = [
  "python3"
]

[runOnStart]
pattern = "**/*.py"
command = "python3"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p logs templates static/css static/js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
