
run = "python main.py"
entrypoint = "main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

hidden = [".config", "**/__pycache__", "**/.mypy_cache", "**/*.pyc", "logs/*.log"]

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "${REPL_HOME}"
FLASK_APP = "main.py"
FLASK_DEBUG = "1"
PORT = "5000"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

[unitTest]
language = "python3"

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[server]
host = "0.0.0.0"
port = 0  # Automatyczny wyb√≥r portu

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run Server"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_server.py"

