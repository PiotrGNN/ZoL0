run = ["python", "app.py"]
modules = ["python-3.10:v18-20230807-322e88b", "python-3.10-pytest:v1-20240510-2e89c25"]

hidden = [".pythonlibs", ".git", ".config", "__pycache__", "*.log", "models_tested.lock", "running.lock"]

entrypoint = "run.py"

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "$PYTHONPATH:${REPL_HOME}/"
PYTHONUNBUFFERED = "1"
PORT = "5000"
HOST = "0.0.0.0"
FLASK_APP = "main.py"
FLASK_ENV = "development"
BYBIT_TESTNET = "true"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[languages]
[languages.python3]
pattern = "**/*.py"
[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Start Dashboard"

[[workflows.workflow]]
name = "Run"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[[workflows.workflow]]
name = "Create Models"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_models.py"

[[workflows.workflow]]
name = "Start Dashboard"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"