run = "python main.py"
language = "python3"
entrypoint = "main.py"

[nix]
channel = "stable-22_11"

[deployment]
run = "python main.py"
deploymentTarget = "cloudrun"

[env]
PYTHONPATH = "."

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = ["pylsp"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
