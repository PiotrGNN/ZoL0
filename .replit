run = "pip install -r requirements.txt && python main.py"
language = "python3"
entrypoint = "main.py"
hidden = [".config", "**/__pycache__", "**/.pyc"]

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "${REPL_HOME}"
PYTHONUNBUFFERED = "1"

[packager]
language = "python3"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[unitTest]
language = "python3"

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config", "requirements.txt"]

[auth]
pageEnabled = false
buttonEnabled = false

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt && python main.py"

[[workflows.workflow]]
name = "Test"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest data/tests/"

[[workflows.workflow]]
name = "Format Code"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "black ."

[[workflows.workflow]]
name = "Lint Code"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flake8 ."

[[workflows.workflow]]
name = "Test with Coverage"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest --cov=. --cov-report=term-missing data/tests/"

[[workflows.workflow]]
name = "Install Dependencies"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"
