
run = ["python3", "main.py"]
hidden = [".config", "**/__pycache__", "**/.pytest_cache", "**/*.pyc"]

entrypoint = "main.py"

language = "python3"

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "."
PYTHONFAULTHANDLER = "1"

[packager]
language = "python3"
ignoredPackages = []

[packager.features]
enabledForHosting = true
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[tools]
formatter = "black"
linter = "flake8"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Test"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest data/tests/"

[[workflows.workflow]]
name = "Format Code"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "black ."

[[workflows.workflow]]
name = "Lint Code"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flake8 ."

[[workflows.workflow]]
name = "Test with Coverage"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest --cov=. --cov-report=term-missing data/tests/"
