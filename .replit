run = "python main.py"
language = "python3"
hidden = [".gitignore", ".git", "__pycache__", "*.egg-info"]
entrypoint = "main.py"

[env]
PYTHONPATH="./"
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-22_11"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = ["pylsp"]

[unitTest]
language = "python3"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".gitignore"]

[workflows.run]
command = "python main.py"

[workflows.Test]
command = "pytest data/tests/"

[workflows.Format Code]
command = "black ."

[workflows.Lint Code]
command = "flake8 ."

[workflows.Test with Coverage]
command = "pytest --cov=. --cov-report=term-missing data/tests/"

[workflows.Install Dependencies]
command = "pip install -r requirements.txt"