run = "python main.py"
entrypoint = "main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

[nix]
channel = "stable-23_05"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[unitTest]
language = "python3"

[workflows]

[[workflows.workflow]]
name = "Naprawiony System"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Test Modeli"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_models.py"

[[workflows.workflow]]
name = "Czyszczenie Cache"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"from data.utils.cache_manager import clean_old_data; clean_old_data(); print('✅ Cache wyczyszczone!')\""

[[workflows.workflow]]
name = "Testy Pełne"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_environment.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_data_conversion.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_models.py"

[[workflows.workflow]]
name = "Test Konwersji Danych"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_data_conversion.py"

[[workflows.workflow]]
name = "Test Modeli z Retrainingiem"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_models.py --force-retrain"

[[workflows.workflow]]
name = "Uruchom Dashboard"
author = 31819671
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

# Wspólne skróty
[keybindings]
run = "ctrl+r"
test = "ctrl+shift+t"
deploy = "ctrl+shift+d"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
FLASK_APP = "main.py"
FLASK_ENV = "development"
PORT = "5000"
HOST = "0.0.0.0"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[[ports]]
localPort = 5000
externalPort = 80
