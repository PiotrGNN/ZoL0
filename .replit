run = "python main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
FLASK_APP = "main.py"
FLASK_ENV = "development"
PORT = "5000"
HOST = "0.0.0.0"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Naprawiony System"

[[workflows.workflow]]
name = "Naprawiony System"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python fix_imports.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

