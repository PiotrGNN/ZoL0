run = "python main.py"
language = "python3"

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH="${PYTHONPATH}:${HOME}/.venv/lib/python3.10/site-packages:."
BYBIT_TESTNET="true"
BYBIT_PRODUCTION_CONFIRMED="false"
BYBIT_PRODUCTION_ENABLED="false"

[languages]
python = "3.11"

[deployment]
run = "python main.py"
deploymentTarget = "cloudrun"

[replit]
languageServer = { version = "7.2.6" }

[keybindings]
run = "ctrl+r"
test = "ctrl+shift+t"
deploy = "ctrl+shift+d"

[workflow.Test\ Modeli]
name = "Test Modeli"
description = "Uruchamia testy modeli AI"
command = "python test_models.py"

[workflow.Test\ Modeli\ z\ Retrainingiem]
name = "Test Modeli z Retrainingiem"
description = "Uruchamia testy modeli AI z wymuszonym retrenowaniem"
command = "python test_models.py --force-retrain"

[workflow.Czyszczenie\ Cache]
name = "Czyszczenie Cache"
description = "Czyści dane cache"
command = "python -c \"from data.utils.cache_manager import clean_old_data; clean_old_data(); print('✅ Cache wyczyszczone!')\""

[workflow.Testy\ Pełne]
name = "Testy Pełne"
description = "Uruchamia pełne testy środowiska i modeli"
command = """
python test_environment.py
python test_data_conversion.py
python test_models.py
"""

[workflow.Test\ Konwersji\ Danych]
name = "Test Konwersji Danych"
description = "Testuje konwersję danych"
command = "python test_data_conversion.py"

[workflow.Uruchom\ Dashboard]
name = "Uruchom Dashboard"
description = "Uruchamia dashboard główny aplikacji"
command = "python main.py"

[workflow.Naprawiony\ System]
name = "Naprawiony System"
description = "Uruchamia system po naprawach"
run = true
command = "python main.py"
entrypoint = "main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

[nix]
channel = "stable-23_05"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[unitTest]
language = "python3"

[workflows]

[[workflows.workflow]]
name = "Naprawiony System"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

