run = ["python", "main.py"]
hidden = [".config", "**/__pycache__", "**/.pytest_cache", "**/*.pyc"]

entrypoint = "main.py"

language = "python3"

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH="."
PYTHONFAULTHANDLER = "1"

[packager]
language = "python3"
ignoredPackages = []

[packager.features]
enabledForHosting = true
packageSearch = true

[gitHubImport]
requiredFiles = [".replit"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[tools]
formatter = "black"
linter = "flake8"

[interpreter]
command = ["python3"]
