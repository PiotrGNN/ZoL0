
# API Keys - Zastąp swoimi własnymi kluczami
BYBIT_API_KEY=twoj_klucz_api
BYBIT_API_SECRET=twoj_sekret_api
BYBIT_USE_TESTNET=true  # Ustaw na true dla testowego API, false dla produkcyjnego

# Konfiguracja środowiska
APP_ENV=development  # production, development, test
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=tajny_klucz_dla_flask

# Konfiguracja logowania
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Parametry handlowe
RISK_LEVEL=low  # low, medium, high
MAX_POSITION_SIZE=0.1  # 10% portfela
ENABLE_AUTO_TRADING=false  # true/false

# Konfiguracja API
API_RATE_LIMIT=true  # Włącza inteligentne limitowanie zapytań API
API_CACHE_ENABLED=true  # Włącza buforowanie odpowiedzi API
API_MIN_INTERVAL=10.0  # Minimalny czas (sekundy) między zapytaniami API
API_MAX_CALLS_PER_MINUTE=6  # Maksymalna liczba zapytań API na minutę
API_CACHE_TTL_MULTIPLIER=8.0  # Mnożnik czasu ważności cache dla API

# Konfiguracja portów
PORT=5000  # Port dla aplikacji Flask
