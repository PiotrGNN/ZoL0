# API Keys - Replace with your actual keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# API Environment
USE_PRODUCTION_API=false  # Set to true for production API, false for testnet

# Environment settings
APP_ENV=development  # production, development, test

# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Trading parameters
RISK_LEVEL=low  # low, medium, high
MAX_POSITION_SIZE=0.1  # 10% of portfolio
ENABLE_AUTO_TRADING=false

# Database configuration
DB_PATH=./data/historical_data.db

# AI Model parameters
ANOMALY_THRESHOLD=2.5
TREND_PREDICTION_WINDOW=20
SENTIMENT_UPDATE_INTERVAL=3600  # seconds