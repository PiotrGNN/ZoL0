# API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_USE_TESTNET=false
BYBIT_TESTNET=False

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000
HOST=0.0.0.0

# Feature Flags
USE_SIMULATED_DATA=true
ENABLE_AI_MODELS=true
ENABLE_BACKTESTING=true
USE_CLOUD_STORAGE=false

# Performance Settings
CACHE_TTL=300
MAX_WORKERS=4
RATE_LIMIT_RETRY=3

# Konfiguracja środowiska
APP_ENV=development  # production, development, test
FLASK_APP=main.py

# Konfiguracja logowania
#LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
#LOG_FILE=logs/app.log

# Parametry handlowe
RISK_LEVEL=low  # low, medium, high
MAX_POSITION_SIZE=0.1  # 10% portfela
ENABLE_AUTO_TRADING=false  # true/false

# Konfiguracja API
API_RATE_LIMIT=true  # Włącza inteligentne limitowanie zapytań API
API_CACHE_ENABLED=true  # Włącza buforowanie odpowiedzi API
API_MIN_INTERVAL=10.0  # Minimalny czas (sekundy) między zapytaniami API
API_MAX_CALLS_PER_MINUTE=6  # Maksymalna liczba zapytań API na minutę
API_CACHE_TTL_MULTIPLIER=8.0  # Mnożnik czasu ważności cache dla API
API_HOST=0.0.0.0
API_PORT=5000

# Limity bezpieczeństwa dla produkcyjnego API
MAX_ORDER_VALUE_USD=1000.0  # Maksymalna wartość pojedynczego zlecenia w USD
ENABLE_TRADE_CONFIRMATION=true  # Wymagaj dodatkowego potwierdzenia przed złożeniem zlecenia produkcyjnego
STRICT_RATE_LIMITING=true  # Zastosuj bardzo rygorystyczne limity dla produkcyjnego API

# Ustawienia rate limitera
RATE_LIMIT_MAX_CALLS=10
RATE_LIMIT_MIN_INTERVAL=3.0
RATE_LIMIT_BACKOFF_FACTOR=2.0

# Cache
CACHE_ENABLED=true

#FLASK_SECRET_KEY=YourRandomSecretKeyHere

# Konfiguracja tunelu SSH SOCKS5
USE_PROXY=False
PROXY_URL=socks5h://127.0.0.1:1080
VPS_USER=your_username
VPS_HOST=your_vps_ip
VPS_PORT=22
VPS_KEY_PATH=/path/to/your/ssh/key