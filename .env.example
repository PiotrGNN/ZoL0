# API Bybit - Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=True
# BYBIT_USE_TESTNET is deprecated, use BYBIT_TESTNET instead

# Application modes
DEBUG=True
LOG_LEVEL=INFO
IS_PRODUCTION=False
USE_SIMULATED_DATA=true

# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
PORT=5000
FLASK_SECRET_KEY=change_this_to_a_secure_random_string

# System Configuration
ENABLE_AUTO_TRADING=False
RISK_LEVEL=low
MAX_POSITION_SIZE=1.0
ENABLE_AI_MODELS=false
ENABLE_BACKTESTING=true

# Performance Settings
API_RATE_LIMIT=true  # Enable intelligent API rate limiting
API_CACHE_ENABLED=true  # Enable API response caching
API_MIN_INTERVAL=10.0  # Minimum time (seconds) between API requests
API_MAX_CALLS_PER_MINUTE=6  # Maximum API calls per minute
API_CACHE_TTL_MULTIPLIER=8.0  # Cache TTL multiplier for API
API_HOST=0.0.0.0
API_PORT=5000

# Safety limits for production API
MAX_ORDER_VALUE_USD=1000.0  # Maximum single order value in USD
ENABLE_TRADE_CONFIRMATION=true  # Require additional confirmation before placing production order
STRICT_RATE_LIMITING=true  # Apply very strict limits for production API

# Rate limiter settings
RATE_LIMIT_MAX_CALLS=10
RATE_LIMIT_MIN_INTERVAL=3.0
RATE_LIMIT_BACKOFF_FACTOR=2.0

# Cache
CACHE_ENABLED=true
CACHE_TTL=300
MAX_WORKERS=4
RATE_LIMIT_RETRY=3