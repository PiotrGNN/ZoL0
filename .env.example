# Application Environment
APP_ENV=development
FLASK_ENV=development
FLASK_APP=main.py
SECRET_KEY=changeme
LOG_LEVEL=INFO

# Application Ports
API_PORT=5000
DASHBOARD_PORT=8501
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=trader
DB_PASSWORD=securepassword
DB_NAME=trading_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secureredispass

# Trading Configuration
TRADING_MODE=simulated
INITIAL_BALANCE=10000.0
MAX_RISK=0.05
MAX_DRAWDOWN=0.10
MAX_POSITION_SIZE=0.20

# Exchange API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_PRODUCTION_CONFIRMED=false
BYBIT_PRODUCTION_ENABLED=false
BYBIT_TESTNET=true

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=15

# Security
JWT_SECRET=generate_a_secure_secret_key_here
PASSWORD_SALT=generate_a_secure_salt_here

# Resource Limits
TRADING_SYSTEM_CPU_LIMIT=1.5
TRADING_SYSTEM_MEMORY_LIMIT=2G
DB_CPU_LIMIT=1
DB_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M